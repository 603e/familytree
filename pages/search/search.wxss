/* pages/home/home.wxss */
.widget{
    position: relative;
    padding-top: 13px;
    padding-bottom: 13px;
    padding-left: 15%;
    padding-right:15%;
    flex: 1;
}
.widget__arrow{
    position: absolute;
    top: 14px;
    right: 22px;
    width: 8px;
    height: 16px;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 20px;
    bottom: 0;
    right: 20px;
    height: 1rpx;
    background-color: #DFDFDF;
}
.table {
    border: 0px solid darkgray;
    font-size: 16px;
}

.tr {
    display: flex;
    width: 100%;
    align-items: center;
    background-color:#FBF9FE;
}

.td {
    width: 50%;
    height: 1.5rem;
    justify-content: center;
    text-align: center;
    word-wrap: break-word;
    flex-shrink: 0;
    line-height: 1.5rem
}
.td_member {
    width: 100%;
    height: 1.5rem;
    justify-content: center;
    text-align: center;
    word-wrap: break-word;
    flex-shrink: 0;
    line-height: 1.5rem
}
.tr_search{
   display: flex;
    width: 100%;
